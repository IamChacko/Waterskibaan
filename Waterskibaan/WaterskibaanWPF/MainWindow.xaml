<Window x:Class="WaterskibaanWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaterskibaanWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="457.5" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="#FF2F2F32" Offset="1"/>
                <GradientStop Color="#FF414144"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="261*"/>
            <RowDefinition Height="166*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="540*"/>
            <ColumnDefinition Width="156*"/>
            <ColumnDefinition Width="87*"/>
        </Grid.ColumnDefinitions>
        <Canvas x:Name="CV_lijnen" HorizontalAlignment="Left" Height="205" Margin="26,10,0,0" VerticalAlignment="Top" Width="444" Background="#FF5C5A61" Grid.Column="1"/>
        <ListBox x:Name="WI_Listbox" HorizontalAlignment="Left" Height="159" Margin="26,250,0,0" VerticalAlignment="Top" Width="78" Background="#FF444555" BorderBrush="#FF444C66" Grid.Column="1" FontSize="11" Grid.RowSpan="2" Foreground="#FFC5C5C5" SelectionChanged="WI_Listbox_SelectionChanged"/>
        <ListBox x:Name="IG_Listbox" HorizontalAlignment="Left" Height="159" Margin="138,250,0,0" VerticalAlignment="Top" Width="80" Background="#FF444555" BorderBrush="#FF444C66" Grid.Column="1" Grid.RowSpan="2" Foreground="#FFC5C5C5"/>
        <ListBox x:Name="WS_Listbox" HorizontalAlignment="Left" Height="159" Margin="252,250,0,0" VerticalAlignment="Top" Width="80"  Background="#FF444555" BorderBrush="#FF444C66" Grid.Column="1" Grid.RowSpan="2" Foreground="#FFC5C5C5"/>
        <ProgressBar x:Name="PB_Wi" HorizontalAlignment="Left" Height="8" Margin="26,237,0,0" VerticalAlignment="Top" Width="78" Maximum="30" Foreground="#FF383B4D" BorderBrush="#FF404040" Background="#FF6C6B78" Grid.Column="1"/>
        <ProgressBar x:Name="PB_Ig" HorizontalAlignment="Left" Height="8" Margin="138,237,0,0" VerticalAlignment="Top" Width="78" Maximum="200" Foreground="#FF383B4D" BorderBrush="#FF404040" Background="#FF6C6B78" Visibility="Hidden" Grid.Column="1"/>
        <ProgressBar x:Name="PB_Ws" HorizontalAlignment="Left" Height="8" Margin="252,237,0,0" VerticalAlignment="Top" Width="80" Maximum="40" Foreground="#FF383B4D" BorderBrush="#FF404040" Background="#FF6C6B78" Visibility="Hidden" Grid.Column="1"/>
        <Grid Grid.ColumnSpan="3" Grid.Column="1" HorizontalAlignment="Left" Height="427" Margin="489,0,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="293" Background="#FF2F2F3A" Opacity="0.9">
            <Label Content="Lijnenvooraad:" HorizontalAlignment="Left" Margin="10,22,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="#FFF3F3F3" FontSize="17"/>
            <Label x:Name="LB_Lijnenvooraad" Content="0" HorizontalAlignment="Left" Margin="127,22,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="#FFF3F3F3" FontSize="17"/>
        </Grid>

    </Grid>
</Window>
